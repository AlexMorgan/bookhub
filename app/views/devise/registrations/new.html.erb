<div class="col-md-12 center">
  <h1 class="page-title">Sign Up</h1>
</div>
<div class="center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="col-xs-12">
      <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "book-info" %>
    </div>

    <div class="col-xs-12">
      <br>
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "book-info"  %>
    </div>

    <div class="col-xs-12">
      <br>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "book-info" %>
    </div>

    <div class="col-xs-12">
      <br>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "book-info" %>
    </div>

    <div class="col-xs-12"><%= f.submit "Sign up", class: "book-info submit-btn" %></div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
