<h2 class="form-title">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= image_tag current_user.avatar.url(:medium), class: "edit-avatar" %>
  <% if current_user.avatar.instance.avatar_file_size == nil  %>
    <div><%= f.label "Create an Avatar", class: "foot-heading" %><br />
  <% else %>
    <div><%= f.label "Change Avatar", class: "foot-heading" %><br />
  <% end %>
  <%= f.file_field :avatar %></div>
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <h1 class="form-title">Personal Information</h1>

      <div class="col-xs-12">
        <%= f.text_field :firstname, autofocus: true, class: "book-info", placeholder: "First Name" %><br><br>
      </div>

      <div class="col-xs-12">
        <%= f.text_field :lastname, class: "book-info", placeholder: "Last Name" %><br><br>
      </div>

      <div class="col-xs-12">
        <%= f.select :year, User.years, prompt: "Choose your year" %><br><br>
      </div>

      <div class="col-xs-12">
        <%= f.text_field :phone, autofocus: true, class: "book-info", placeholder: "Phone Number" %><br><br>
      </div>

      <div class="col-xs-12">
        <%= f.select :address, User.university, prompt: "University", class: "univ-select" %>
      </div>

    </div>

    <div class="col-md-6 col-xs-12">
      <h1 class="form-title">Account Settings</h1>
      <div class="col-xs-12">
        <%= f.text_field :username, autofocus: true, class: "book-info", placeholder: "Username" %><br><br>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="col-xs-12">
        <%= f.text_field :email, placeholder: "Cannot be changed...", class: "book-info" %><br><br>
      </div>

      <div class="col-xs-12">
        <%= f.password_field :password, autocomplete: "off", placeholder: "New Password", class: "book-info" %><br><br>
      </div>

      <div class="col-xs-12">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password", class: "book-info" %><br><br>
      </div>

      <div class="col-xs-12">
        <i>(We need your current password to confirm acount changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password", class: "book-info" %>
      </div>
    </div>
  </div><br>

  <div class="col-xs-7 col-sm-2"><%= f.submit "Update", class: "submit-btn" %></div>
<% end %>


<div class="col-xs-12"><h3 class="thin">Unhappy?</h3></div>

<div class="col-xs-7 col-sm-2">
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "submit-btn salmon" %>
</div>

<div class="col-xs-12">
  <%= link_to "Back", "/" %>
</div>

<script type="text/javascript">
$(document).ready(function(){
    $('#user_password').val('')
  });
</script>
