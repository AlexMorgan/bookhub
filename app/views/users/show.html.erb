<h1>Dashboard</h1>

<%= image_tag @user.avatar.url(:medium) %>
<h2><%= @user.fullname %></h2>
<div class="row">
  <div class="col-md-6">
    <h3>Books Added</h3>
    <p><%= "You have #{@user.books.where(sold: "false").count} book(s) for sale" %></p>
    <ul>
      <% @user.books.each do |book| %>
      <% if book.sold == false %>
      <li><%= link_to book.title, book_path(book) %>
        - <%= link_to "Edit", edit_book_path(book.id) %> | <%= link_to "Delete", book, method: :delete, data: {confirm: "Are you sure?"} %></li>
      <% end %>
      <% end %>
    </ul>
    <%= link_to "Add Book", new_book_path %>
  </div>

  <div class="col-md-6">
    <h3>Offers</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Books Sold</h3>
    <ul>
      <% @user.books.each do |book| %>
        <% if book.sold == true %>
          <li><%= book.title %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<%= link_to "Back", :back %>
