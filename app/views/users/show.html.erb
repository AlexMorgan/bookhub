<h1>Dashboard</h1>

<%= image_tag @user.avatar.url(:medium) %>
<h2><%= @user.fullname %></h2>
<div class="row">
  <div class="col-md-6">
    <h3>Books Added</h3>
    <ul>
      <% @user.books.each do |book| %>
      <li><%= link_to book.title, book_path(book) %> - <%= link_to "Edit", edit_book_path(book.id) %> | <%= link_to "Delete", book, method: :delete, data: {confirm: "Are you sure?"} %></li>
      <% end %>
    </ul>
    <%= link_to "Add Book", new_book_path %>
  </div>

  <div class="col-md-6">
    <h3>Offers</h3>
  </div>
</div>

<%= link_to "Back", :back %>
