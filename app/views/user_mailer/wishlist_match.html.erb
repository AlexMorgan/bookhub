<h1>Your wish has been granted.</h1>

<p>The following users have added <i><%= @need.title %></i></p>

<ol>
  <% @matches.each do |match| %>
    <li>
      <div>
        <%= match.title %> - <%= match.user.fullname %> |
        <% if match.price == 0 %>
          Make an offer
        <% else %>
          Price: $<%= match.price %>.00
        <% end %>
      </div>

      <div>
        <a href="http://boookhub.herokuapp.com/books/<%= match.id %>">Buy Now</a>
      </div>
    </li>
  <% end %>
</ol>

