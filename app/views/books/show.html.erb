<h1 class="book-title"><%= @book.title %></h1>

<h3>Course</h3>
<h5><%= @book.course_title %></h5>

<h3>Price</h3>
<h5>$<%= @book.price %></h5>

<h3>Quality</h3>
<h5><%= @book.quality %></h5>

<h3>Seller</h3>
<h5><%= @owner.fullname %></h5>

<div class="row">
  <div class="col-md-1">
    <%= link_to "Back", books_path, class: "btn btn-primary" %>
  </div>

  <div class="col-md-1">
    <%= button_to "Buy!", @book, method: :put, class: "btn btn-success" %>
  </div>
</div>
